<Application x:Class="Sub_6.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Sub_6"
             xmlns:viewmodels="clr-namespace:Sub_6.ViewModels"
             xmlns:views="clr-namespace:Sub_6.Views"
             >
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewmodels:TimeGameViewModel}">
            <views:TimeGameView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:CasualGameViewModel}">
            <views:CasualGameView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:StartViewModel}">
            <views:StartView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:SettingsViewModel}">
                <views:SettingsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ChooseGameModeViewModel}">
            <views:ChooseGameModeView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ChooseGenreViewModel}">
            <views:ChooseGenreView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ResultViewModel}">
            <views:ResultView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:GameOverViewModel}">
            <views:GameOverView/>
        </DataTemplate>


    </Application.Resources>
</Application>
